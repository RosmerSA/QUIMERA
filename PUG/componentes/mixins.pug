mixin new-tshirts-item (imagen, nombre_polo, last_price, new_price)
	.item
		figure.item__photo 
			img(src=imagen, alt="Item")
		.discount-container
			p
				span.discount 30% OFF
		.item__details
			p
				span.nombre_polo=nombre_polo
			p
				span.last_price=last_price
			p
				span.new_price=new_price  

