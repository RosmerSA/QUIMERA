mixin review-product(reviewer_name, reviewer_shirt, reviewer_comment)
	.review  
		p.review__name
			span=reviewer_name
		p.review__polo-name
			span=reviewer_shirt 
		.review__stars 
			i.fa-solid.fa-star
			i.fa-solid.fa-star
			i.fa-solid.fa-star
			i.fa-solid.fa-star
			i.fa-solid.fa-star
		p.review__comment=reviewer_comment


